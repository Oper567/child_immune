// FORCE REDEPLOY: Updated for Health Worker Auth & Clinic Relations
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") 
}

// 1. New Model for Health Workers
model HealthWorker {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String   @unique
  password      String   // Hashed with bcrypt
  role          Role     @default(NURSE)
  clinicName    String
  clinicCode    String   // Used for registration verification
  recordsSigned Record[] // Tracks which vaccines this worker gave
  createdAt     DateTime @default(now())
}

model Child {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  uhid          String   @unique
  firstName     String
  lastName      String
  dob           DateTime
  guardianPhone String
  records       Record[]
  createdAt     DateTime @default(now())
}

model Record {
  id              String        @id @default(auto()) @map("_id") @db.ObjectId
  vaccineName     String
  status          Status        @default(DUE)
  administeredAt  DateTime?
  nextDueDate     DateTime
  childId         String        @db.ObjectId
  child           Child         @relation(fields: [childId], references: [id])
  
  // 2. Tracks which worker gave the vaccine
  workerId        String?       @db.ObjectId
  worker          HealthWorker? @relation(fields: [workerId], references: [id])
  
  clinicName      String?
}

enum Status {
  COMPLETED
  DUE
  MISSED
}

enum Role {
  ADMIN
  NURSE
  DOCTOR
}